<Window x:Class="bingorino.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bingorino"
        mc:Ignorable="d"
        Title="TF2 Bingo" Height="925" Width="775">
    <Grid Name="grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>


        <TextBlock x:Name="textBlock_0"  Grid.Row="0" Grid.Column="0" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_1" Grid.Row="0" Grid.Column="1" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_2" Grid.Row="0" Grid.Column="2" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_3" Grid.Row="0" Grid.Column="3" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_4" Grid.Row="0" Grid.Column="4" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>

        <TextBlock x:Name="textBlock_5" Grid.Row="1" Grid.Column="0" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_6" Grid.Row="1" Grid.Column="1" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_7" Grid.Row="1" Grid.Column="2" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_8" Grid.Row="1" Grid.Column="3" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_9" Grid.Row="1" Grid.Column="4" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>

        <TextBlock x:Name="textBlock_10" Grid.Row="2" Grid.Column="0" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_11" Grid.Row="2" Grid.Column="1" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_12" Grid.Row="2" Grid.Column="2" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_13" Grid.Row="2" Grid.Column="3" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_14" Grid.Row="2" Grid.Column="4" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>

        <TextBlock x:Name="textBlock_15" Grid.Row="3" Grid.Column="0" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_16" Grid.Row="3" Grid.Column="1" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_17" Grid.Row="3" Grid.Column="2" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_18" Grid.Row="3" Grid.Column="3" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_19" Grid.Row="3" Grid.Column="4" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>

        <TextBlock x:Name="textBlock_20" Grid.Row="4" Grid.Column="0" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_21" Grid.Row="4" Grid.Column="1" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_22" Grid.Row="4" Grid.Column="2" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_23" Grid.Row="4" Grid.Column="3" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>
        <TextBlock x:Name="textBlock_24" Grid.Row="4" Grid.Column="4" MouseDown="unmark" MouseRightButtonDown="markRed" MouseLeftButtonDown="markBlue" Padding="5"/>



        <Label 
            x:Name="labelPointsBlue"
            Content=""
            Grid.Row="5"
            Grid.Column="0"
            Padding="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="30"
            Foreground="White"
            Background="DeepSkyBlue"/>

        <Label
            x:Name="labelPointsRed" 
            Content=""
            Grid.Row="5" 
            Grid.Column="4" 
            Padding="15"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="30" 
            Foreground="White"
            Background="Crimson"/>


        <Button 
            x:Name="generateBingo"
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,70,0,-25" 
            Click="generateCards">
            <TextBlock  
                Text="Generate randomly"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextAlignment="Center"
                TextWrapping="Wrap"/>
        </Button>

        <TextBlock
            x:Name="codeToCopy"
            Text="bingo code"
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Margin="0,5,0,40"
            FontSize="25"
            TextWrapping="WrapWithOverflow"
            MouseLeftButtonDown="copyBingoCode"
            />

        <TextBox
            x:Name="codeInput"
            Grid.Row="5"
            Grid.Column="3"
            Margin="0,5,0,40"/>

        <Button 
            x:Name="generateBingoFromCode"
            Grid.Row="5"
            Grid.Column="3"
            Margin="0,70,0,-25"
            Click="generateCardsFromCode">
            <TextBlock  
                Text="Generate with a code"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow"/>
        </Button>
    </Grid>
</Window>